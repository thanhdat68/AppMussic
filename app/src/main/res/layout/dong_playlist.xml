<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageBackgrodplaylist"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/custom_bacgroud_banner"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="8dp" />

    <ImageView
        android:id="@+id/imaviewplaylist"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_alignBottom="@+id/imageBackgrodplaylist"
        android:elevation="6dp"
        android:scaleType="fitXY"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    <TextView
        android:textSize="13sp"
        android:text="Những Bài hit Mới nhất "
        android:layout_alignBottom="@id/imageBackgrodplaylist"
        android:layout_toRightOf="@id/imaviewplaylist"
        android:layout_marginLeft="13dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:id="@+id/textviewtenplaylist"
        android:maxLines="1"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        />
</RelativeLayout>