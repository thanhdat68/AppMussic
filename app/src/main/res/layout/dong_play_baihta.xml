<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/textviewplaynhacindex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="1"
            android:textColor="#ffff"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textviewplaytenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textviewplaynhacindex"
            android:ellipsize="end"
            android:maxWidth="250dp"
            android:singleLine="true"
            android:text="mai này con lớn lên"
            android:textColor="#ffff"
            android:textSize="17sp" />

        <TextView
            android:text="ca sĩ nhân dân"
            android:textSize="12sp"
            android:textColor="#ffff"

            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_toRightOf="@+id/textviewplaynhacindex"
            android:layout_below="@+id/textviewplaytenbaihat"
            android:id="@+id/textviewplaynhactencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>

</RelativeLayout>